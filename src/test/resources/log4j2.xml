<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console-log" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p %c{1} - %m%n"/>
        </Console>
        <RollingFile name="VAR_LOG" fileName="/var/log/mci-lr/mci-lr.log"
                     filePattern="/var/log/mci-lr/mci-lr.log.%d{dd-MM-yyyy}">
            <PatternLayout>
                <pattern>%d{dd-MM-yyyy HH:mm:ss} [%-5p] %c{1} - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="org.sharedhealth.mci" level="${env:MCI_LOG_LEVEL}" additivity="false">
            <appender-ref ref="VAR_LOG"/>
        </Logger>
        <Root>
            <level value ="ERROR" />
            <appender-ref ref="VAR_LOG" />
        </Root>
    </Loggers>
</Configuration>
